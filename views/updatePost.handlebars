{{!-- User interaction to add a new blogpost --}}
<section id="blogpost-container">
    <div class="new-post-display">
        <p class="large-font" id="blogpost-id" data-blogpost-id={{blogpost.id}}><span>{{{blogpost.emoji}}}</span>  Update Post</p>
        <p class="large-font">Title</p>
        <textarea type="text" class="post-title-entry" id="blog-post-title">{{blogpost.title}}</textarea>
        <p class="large-font">Blogpost Content</p>
        <textarea type="text" class="comment-entry" id="blog-post-content">{{blogpost.blog_content}}</textarea>
        <div class="save-button-row-container">
            <button id="update-post-button" class="add-comment-button">Update Post</button>
            <a href="/api/{{blogpost.id}}"><button class="add-comment-button">Cancel</button></a>
        </div>
    </div>
</section>

<script src="/js/updatePost.js"></script>